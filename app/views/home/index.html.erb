
<div class="container">
    <div class="container-centralizada">
        <% @header.each do |header| %> 
            <p class="image-container">
                <%= image_tag header.icon_url, class: "img-responsive header-i" %>
            </p> 
            <p class="h-description">
                <%= header.description.html_safe %>
            </p>
        <% end %>

        <% @video.each do |video| %>
            <h2><%= video.title %></h2>
            <div class="video-container">
                <%= image_tag 'lines2.png', class:"img-lines-video" %>
                <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= extract_youtube_video_id(video.url) %>" frameborder="0" allowfullscreen></iframe>
            </div>
        <% end %>
